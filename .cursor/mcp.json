{
	"mcpServers": {
		"taskmaster-ai": {
			"command": "npx",
			"args": ["-y", "--package=task-master-ai", "task-master-ai"],
			"env": {
				"ANTHROPIC_API_KEY": "your-anthropic-api-key-here",
				"OPENAI_API_KEY": "your-openai-api-key-here"
			}
		},
		"supabase": {
			"command": "npx",
			"args": [
				"-y",
				"@supabase/mcp-server-supabase@latest",
				"--access-token",
				"your-supabase-token-here"
			]
		}
	}
}
