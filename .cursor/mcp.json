{
	"mcpServers": {
		"taskmaster-ai": {
			"command": "npx",
			"args": ["-y", "--package=task-master-ai", "task-master-ai"],
			"env": {
				"ANTHROPIC_API_KEY": "{{ANTHROPIC_API_KEY}}",
				"OPENAI_API_KEY": "{{OPENAI_API_KEY}}"
			}
		},
		"supabase": {
			"command": "npx",
			"args": [
				"-y",
				"@supabase/mcp-server-supabase@latest",
				"--access-token",
				"{{SUPABASE_ACCESS_TOKEN}}"
			]
		}
	}
}
